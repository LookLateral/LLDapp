<%- include('header.ejs') %>

  <main role="main">
    <section class="jumbotron signin-create text-center"> 
    	<h1 class="h3 mb-3 font-weight-normal signin-create">Settings</h1> 
		<form class="form-signin" action="/member-password-post" method="post">			
			<span class="ml-3 text-bold">Password Reset</span>
			<label for="inputEmail" class="sr-only">Email</label>
			<input type="email" id="email" name="email" class="form-control" placeholder="Email address" value="<%= MemberData.Email %>" disabled>
			<label for="inputPassword" class="sr-only">Password</label>
			<input type="password" id="password" name="password" class="form-control" placeholder="Enter New Password" required>
			<p><input type="submit" class="btn btn-secondary signin" value="Update Password"></p>
		</form>
			
        <form class="form-signin" action="/member-wallet-post" method="post">
          <span class="ml-3 text-bold">MyEtherWallet Address</span>
          <label for="walletAddress" class="sr-only">MyEtherWallet Address</label>
          <input type="text" class="form-control" id="wallet_address" name="wallet_address" placeholder="Enter MyEtherWallet address" value="<% if (MemberData.WalletAddress) { %><%= MemberData.WalletAddress %><% } %>" required>
          <p><input type="submit" class="btn btn-secondary signin" value="Update Wallet"></p>
          <p class="ml-3">Retrieve your MyEtherWallet address 
          	<a href="https://www.myetherwallet.com/#view-wallet-info" target="_blank">here</a>.
          </p>
        </form>	
    
		<% if (typeof ErrorText !== 'undefined' && ErrorText !== null) { %>
			<div class="alert alert-danger alert-dismissible">
				<a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
				<%= ErrorText %>
			</div>
		<% } %>

	</section>
  </main>

 <%- include('footer.ejs') %>
