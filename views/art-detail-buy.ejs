            <input class="form-control col-md-4 mb-2" type="number" placeholder="= US Dollars" disabled>
            <input class="form-control col-md-4 mb-0" type="number" placeholder="= LOOK" disabled>
<!--             <span class="small">= US Dollars = LOOK</span> -->
          </div>
        </row>
        <row>
<!--             <div class="ml-0">
