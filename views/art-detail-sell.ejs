<!-- Bootstrap modal for Sell Fractionalized Art -->
<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Sell This Artwork</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <row>
            <img data-src="holder.js/100x100" class="rounded float-left mr-2 artwork-thumbnail" alt="100x100" src="/images/thumbnail100.svg" data-holder-rendered="true">
            <div class="ml-0 mb-4 modal-artwork-metadata">
              <span class="text-muted">Artwork Title</span><br/> 
              <span class="text-muted">Description</span><br/>
<!--               <span class="artwork-buy font-weight-bold">Enter USD price below</span><br/>
              <span class="text-muted text-bold">Enter fractional % to sell below</span><br/> 
              <span class="text-muted text-bold">Receive payment via Member Wallet address</span> -->
            </div>
            <br/>
        </row>
        <row class="mt-2">
          <hr class="mb-0 mt-4">
          <span class="small">Note: You can cancel until someone buys. You have a right to buy back at any time with + 5%.</span>
          <!-- POST to Taurus API??? -->
          <div class="form-group ml-0 mt-2">
              <span class="text-bold">Enter USD price</span> 
              <input class="form-control col-md-4" type="number" name="price" placeholder="$USD">
          </div>
        </row>
        <row>
          <!-- POST to Taurus API the fractional % then calculate the remaining % available for sale -->
          <div class="form-group ml-0">
              <span class="text-bold">Enter the percent youâ€™d like to sell of this artwork?<br/> 
              (between 10 and 49%)</span> 
              <input class="form-control col-md-4" type="number" min="0.5" max="49" placeholder="% sell">
          </div>
        </row>
        <row>
          <div class="form-group ml-0 mt-2">
<!--               <span class="text-bold">Enter LOOK price</span> 
              <input class="form-control col-md-4" type="number" name="price" placeholder="LOOK"> -->
              <input class="form-control col-md-4 mb-0" type="number" placeholder="= LOOK" disabled>
          </div>
        </row>
        <row class="mt-2 mb-2">
          <div class="form-check mb-0">
            <input type="checkbox" class="form-check-input" id="buyback">
            <label class="form-check-label small" for="buyback">You are entering into a legally binding contract to sell fractional ownership of this art. You warrant as an individual member, that you have full rights to sell this piece of art. Agree to Terms of service.   
            </label>
          </div>
        </row>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary sell">Sell Now</button>
      </div>
    </div>
  </div>
</div>

